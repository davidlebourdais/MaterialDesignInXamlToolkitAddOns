<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net471;netcoreapp3.1</TargetFrameworks>
    <PackageId>MaterialDesignInXAMLExtender</PackageId>
    <Title>Extender for MaterialDesignInXAML</Title>
    <PackageDescription>Offers new features and extra controls based on MaterialDesignInXAML.</PackageDescription>
    <PackageTags>WPF;Xaml;ColorPicker</PackageTags>
    <UseWPF>true</UseWPF>
    <Version>0.0.92</Version>
    <Authors>David Le Bourdais</Authors>
    <Copyright>Copyright Â© 2020</Copyright>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="Resources\Cursors\*.cur" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dynamitey" Version="2.0.10.189" />
    <PackageReference Include="ExtendedWPFVisualTreeHelper" Version="1.0.4" />
    <PackageReference Include="MaterialDesignThemes" Version="3.1.3" />
  </ItemGroup>
</Project>
